<section class="slider container glide">
    <h2 class="slider__title"><%= sliderTitle %></h2>
    <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">
            <% products.forEach(product=> { %>
                <li class="slider__item glide__slide">
                    <%- include('card', {product: product}) %>
                </li>              
            <% }); %>         
        </ul>
    </div>
    <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left arrows" data-glide-dir="<"><iconify-icon icon="tabler:chevron-left"></iconify-icon></button>
        <button class="glide__arrow glide__arrow--right arrows" data-glide-dir=">"><iconify-icon icon="tabler:chevron-right"></iconify-icon></button>
    </div>
</section>