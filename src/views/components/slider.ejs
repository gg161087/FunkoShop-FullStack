<section class="slider container glide">
    <h2 class="slider__title"><%= sliderTitle %></h2>
    <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">
            <% products.forEach(product=> { %>
                <li class="slider__item glide__slide">
                    <article class="card-item">
                        <a class="card-item__link" href="">
                        <picture class="card-item__cover">
                                <span class="card-item__tag">Nuevo</span>
                                <img class="card-item__img--front" src="/img/<%= product.image_front %>" alt="Figura coleccionable Funko de un <%= product.product_name %>">
                                <img class="card-item__img--back" src="/img/<%= product.image_back %>" alt="Figura coleccionable Funko de un <%= product.product_name %> en caja">
                            </picture>
                        <div class="card-item__content">
                                <p class="card-item__licence"><%= product.licence_name %></p>
                                <h4 class="card-item__name"><%= product.product_name %></h4>
                                <p class="card-item__price">$<%= product.price %>.-</p>
                                <p class="card-item__promo"><%= product.dues %> CUOTAS SIN INTERÃ‰S</p>
                        </div>
                        </a>
                    </article>
                </li>              
            <% }); %>         
        </ul>
    </div>
    <div class="glide__arrows" data-glide-el="controls">
        <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon icon="tabler:chevron-left"></iconify-icon></button>
        <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon icon="tabler:chevron-right"></iconify-icon></button>
    </div>
</section>